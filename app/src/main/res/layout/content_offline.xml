<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shrawankeshari.playmusic.OfflineMusic.OfflineMusicActivity"
    tools:showIn="@layout/activity_offline">

    <ListView
        android:id="@+id/listView_offline"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shadoweffect"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/song_image_offline"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_title_offline"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="1dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/song_artist_offline"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="1dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/song_previous_offline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/song_control_offline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/song_next_offline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_next" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>
